{
    // DIFF VIZU
    "diffEditor.renderSideBySide": false,
    // DEBUG
    "debug.toolBarLocation": "docked",
    // EDITOR
    "editor.autoIndent": "full",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "Source Code Pro",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.multiCursorModifier": "alt",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        120
    ],
    "editor.cursorSurroundingLines": 100,
    "editor.suggestSelection": "recentlyUsed",
    // FILES
    "files.autoSaveDelay": 1000,
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // TERMINAL
    "terminal.integrated.fontFamily": "Source Code Pro",
    "terminal.integrated.showExitAlert": true,
    "terminal.integrated.fontSize": 12,
    "window.openFoldersInNewWindow": "off",
    // TELEMETRY AND UPDATE
    "telemetry.telemetryLevel": "off",
    "update.mode": "manual",
    // WORKBENCH
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#e1e41e7e",
        "activityBar.background": "#282c34",
        "sideBar.background": "#282c34",
        "statusBar.background": "#0059ffa4"
    },
    "workbench.tips.enabled": false,
    "workbench.editor.showIcons": true,
    "workbench.settings.editor": "json",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Visual Studio 2017 Dark - C++",
    // PYTHON
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    // MARKDOWN
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.rulers": [
            120
        ],
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": false,
    },
    // C / C++ - LLVM / CLANG STYLE
    "cmake.configureOnOpen": true,
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, AccessModifierOffset: -4, DerivePointerAlignment: false, PointerAlignment: Left, UseTab: Never, IndentWidth: 4, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, TabWidth: 4, NamespaceIndentation: All }",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.codeAnalysis.maxConcurrentThreads": 8,
    "C_Cpp.codeAnalysis.maxMemory": 256,
    "C_Cpp.codeAnalysis.updateDelay": 200,
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "[c]": {
        "editor.rulers": [
            80,
            120,
        ]
    },
    "[cpp]": {
        "editor.rulers": [
            80,
            120,
        ]
    },
}
