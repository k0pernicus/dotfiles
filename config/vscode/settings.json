{
    // DIFF VIZU
    "diffEditor.renderSideBySide": true,
    // DEBUG
    "debug.toolBarLocation": "docked",
    "debug.console.closeOnEnd": false,
    "debug.showBreakpointsInOverviewRuler": true,
    // EDITOR
    "editor.autoIndent": "full",
    "editor.codeLens": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "Source Code Pro",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        120
    ],
    "editor.cursorSurroundingLines": 100,
    "editor.suggestSelection": "recentlyUsed",
    // FILES
    "files.autoSaveDelay": 2500,
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // TERMINAL
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.fontSize": 11,
    "window.openFoldersInNewWindow": "off",
    // GIT
    "git.enabled": true,
    "git.autoRepositoryDetection": true,
    "git.decorations.enabled": true,
    // TELEMETRY AND UPDATE
    "telemetry.telemetryLevel": "off",
    "update.mode": "manual",
    // WORKBENCH
    "workbench.activityBar.location": "top",
    "workbench.editor.showTabs": "single",
    "workbench.statusBar.visible": true,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.editor.showIcons": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
    "workbench.preferredLightColorTheme": "Catppuccin Latte",
    "workbench.settings.editor": "json",
    "workbench.sideBar.location": "right",
    "workbench.tips.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 8,
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": false,
    // PYTHON
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    // MARKDOWN
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.rulers": [
            120
        ],
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": false,
    },
    // C / C++ - LLVM / CLANG STYLE
    "cmake.configureOnOpen": true,
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, AccessModifierOffset: -4, DerivePointerAlignment: false, PointerAlignment: Left, UseTab: Never, IndentWidth: 4, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, TabWidth: 4, NamespaceIndentation: All }",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.codeAnalysis.maxConcurrentThreads": 8,
    "C_Cpp.codeAnalysis.maxMemory": 256,
    "C_Cpp.codeAnalysis.updateDelay": 200,
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "[c]": {
        "editor.rulers": [
            80,
            120,
        ]
    },
    "[cpp]": {
        "editor.rulers": [
            80,
            120,
        ]
    },
    // Material icon
    "material-icon-theme.hidesExplorerArrows": true,
}
