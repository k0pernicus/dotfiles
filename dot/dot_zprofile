## Glitchees files

p=$HOME/.config

# Common
if [ -f ${p}/.gtc_comm ]; then
  echo "> Loading Common config..."
  start=${SECONDS}
  source ${p}/.gtc_comm # Common / System stuff
  end=${SECONDS}
  echo "\t> Took $((end - start)) seconds"
else
  echo "\t> .gtc_comm not found..."
fi

# Tools
if [ -f ${p}/.gtc_tool ]; then
  echo "> Loading Tooling config..."
  start=${SECONDS}
  source ${p}/.gtc_tool # Tooling
  end=${SECONDS}
  echo "\t> Took $((end - start)) seconds"
else
  echo "\t> .gtc_tool not found..."
fi

# Programming environment
if [ -f ${p}/.gtc_prog ]; then
  echo "> Loading Programming config..."
  start=${SECONDS}
  source ${p}/.gtc_prog # Programming configuration
  end=${SECONDS}
  echo "\t> Took $((end - start)) seconds"
else
  echo "\t> .gtc_prog not found..."
fi

# Functions
if [ -f ${p}/.gtc_func ]; then
  echo "> Loading Functions config..."
  start=${SECONDS}
  source ${p}/.gtc_func # Common functions
  end=${SECONDS}
  echo "\t> Took $((end - start)) seconds"
else
  echo "\t> .gtc_func not found..."
fi
