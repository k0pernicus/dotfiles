# General
export EDITOR=vim # Use vim as default editor
export LANG="en_US.UTF-8"
# Terminal configuration for GNU/Linux systems
if [[ "$OSTYPE" == "linux-gnu" ]]; then
    export LC_ALL="en_US.UTF-8"
    export TERM="xterm-256color"
fi
# Homebrew configuration for macOS
if [[ "$OSTYPE" == "darwin"* ]]; then
    # Additional security guide here:
    # https://github.com/drduh/macOS-Security-and-Privacy-Guide#homebrew
    export HOMEBREW_NO_ANALYTICS=1
    export HOMEBREW_NO_INSECURE_REDIRECT=1
    export HOMEBREW_CASK_OPTS=--require-sha
    # Brew location(s)
    export PATH="/usr/local/sbin:$PATH"
    eval $(/opt/homebrew/bin/brew shellenv)
    export PATH="/opt/homebrew/opt/llvm/bin:$PATH"
    export LD_LIBRARY_PATH="/opt/homebrew/lib:$LD_LIBRARY_PATH"
    export DYLD_LIBRARY_PATH="/opt/homebrew/lib:$DYLD_LIBRARY_PATH"
    # Git signin
    export GPG_TTY=$(tty)
    # Vulkan / MoltenVK SDK path
    export VULKAN_SDK="$HOME/opt/VulkanSDK/1.3.211.0/macOS"
    export PATH="$VULKAN_SDK/bin:$PATH"
    export DYLD_LIBRARY_PATH="$VULKAN_SDK/lib:$DYLD_LIBRARY_PATH"
    export VK_ICD_FILENAMES="$VULKAN_SDK/share/vulkan/icd.d/MoltenVK_icd.json"
    export VK_LAYER_PATH="$VULKAN_SDK/share/vulkan/explicit_layer.d"
    # Pico-8 carts location
    export PICO8_CARTS="$HOME/Library/Application Support/pico-8/carts"
fi

## Programming languages
# Go
export GOPATH="$HOME/Develop/go"
export GOBIN="$GOPATH/bin"
export PATH="/usr/local/go/bin:$GOBIN:$PATH"

## Global aliases
# Tmux
alias tmux="TERM=screen-256color-bce tmux"
# Git
alias ga="git add"
alias gci="git commit -S"
alias gm="git mv"

## Functions
[ -f .func ] && source .func
